{
  "openapi": "3.1.0",
  "info": {
    "title": "Sample API",
    "version": "1.0.0",
    "description": "API for listing and searching data based on the schema"
  },
  "servers": [
    {
      "url": "https://api.example.com/v1",
      "description": "Production server"
    }
  ],
  "paths": {
    "/data": {
      "get": {
        "summary": "List all data",
        "description": "Retrieves a list of all available data entries.",
        "responses": {
          "200": {
            "description": "A list of data entries",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Tariffs"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/data/search": {
      "get": {
        "summary": "Search data by region",
        "description": "Retrieves a list of data entries filtered by the specified region.",
        "parameters": [
          {
            "name": "region",
            "in": "query",
            "required": true,
            "description": "Region to filter the data by",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A filtered list of data entries",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Tariffs"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/authenticate": {
      "post": {
        "summary": "Machine-to-Machine Authentication",
        "description": "Authenticates a machine using OpenID Connect (OIDC) for M2M communication.",
        "security": [
          {
            "oidcAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully authenticated"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Tariffs": {
        "type": "object",
        "properties": {
          "object": { "type": "string" },
          "object_version": { "type": "string" },
          "provider_id": { "type": "string" },
          "supplier_label": { "type": "string" },
          "tariff_reference": { "type": "string" },
          "tariff_label": { "type": "string" },
          "location_id": { "type": "string" },
          "region": { "type": "string" },
          "live_mode": { "type": "boolean" },
          "tariff_date": { "type": "string" },
          "tariff_version": { "type": "string" },
          "tariff_expiry": { "type": "string" },
          "contract_start_date": { "type": "string" },
          "contract_end_date": { "type": "string" },
          "mpxn": { "type": "string" },
          "is_linked": { "type": "boolean" },
          "direction": { "type": "string" },
          "the_type": { "type": "string" },
          "timezone": { "type": "string" },
          "tariff_schedule": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "time_of_use": { "type": "string" },
                "standing_charge": { "type": "number" },
                "months": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "days_and_hours": {
                  "type": "array",
                  "nullable": true,
                  "items": {
                    "type": "object",
                    "properties": {
                      "days": {
                        "type": "array",
                        "items": { "type": "string" }
                      },
                      "hours": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "valid_from": { "type": "string" },
                            "valid_to": { "type": "string" },
                            "rate": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "to_kwh": { "type": "number", "nullable": true },
                                  "value": { "type": "number", "nullable": true }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "time_created": { "type": "string" }
        }
      }
    },
    "securitySchemes": {
      "oidcAuth": {
        "type": "openIdConnect",
        "openIdConnectUrl": "https://auth.example.com/.well-known/openid-configuration",
        "description": "This API uses OpenID Connect (OIDC) for Machine-to-Machine (M2M) authentication.\n- Uses TLS 1.3 for secure communication.\n- Authentication is JWT token-based.\n- Clients must present a valid client certificate and JWT for authentication."
      }
    }
  }
}
